<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RezeptHinzufuegen">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <Spinner
            android:id="@+id/MAIN_SPINNER2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Spinner
            android:id="@+id/SUB_SPINNER2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/B_FOTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mach ein Foto!"/>
        <ImageView
            android:id="@+id/FOTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/NAME_EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name des Rezepts"/>
        <EditText
            android:id="@+id/ZEIT_EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:maxLength="4"
            android:hint="Zubereitungszeit"/>
        <SeekBar
            android:id="@+id/SCHWIERIGKEITSGRAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GRAD_TEXT"/>
        <RatingBar
            android:layout_below="@+id/rate_me"
            android:id="@+id/BEWERRTUNG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0" />
        <EditText
            android:id="@+id/VORGEHENSWEISE_EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Vorgehensweise"/>
        <Button
            android:id="@+id/CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abbrechen"/>
        <Button
            android:id="@+id/OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hinzufügen"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Füge eine Zutat hinzu:"/>
        <ImageButton
            android:id="@+id/ZUTAT_B"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:src="@drawable/add"
            android:paddingTop="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <ListView
            android:id="@+id/ZUTATEN_LISTE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>